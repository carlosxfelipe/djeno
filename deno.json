{
  "tasks": {
    "start": "deno run --allow-net --allow-read server.ts",
    "dev": "denon run --allow-net --allow-read server.ts",
    "render:check": "deno run --allow-read render_check.ts"
  },
  "fmt": {
    "files": {
      "include": [
        "./**/*.ts"
      ]
    }
  },
  "lint": {
    "files": {
      "include": [
        "./**/*.ts"
      ]
    }
  },
  "imports": {
    "@lib/": "./lib/",
    "@views/": "./views/",
    "@templates/": "./templates/",
    "hono": "https://deno.land/x/hono@v3.11.7/mod.ts",
    "serveStatic": "https://deno.land/x/hono@v3.11.7/middleware.ts"
  }
}
